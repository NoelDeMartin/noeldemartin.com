// Variables
header_height = 200px
nav_height = 50px
nav_items_count = 4
nav_item_width = 25%

// Styles
header
	position absolute
	top 0
	width 100%
	height header_height
	background-color #b8e0df
	z-index: -1

nav
	margin-top header_height
	background-color black
	height nav_height
	width 100%

	ul
		list-style none
		margin auto
		padding-left 0
		width nav_item_width * nav_items_count

	li
		float left
		line-height nav_height
		text-align center
		width (100 / nav_items_count)%
		font-weight bold

	a
		display block
		text-decoration none !important
		width 100%
		height nav_height

	a, a:visited, a:hover, a:active, a:link
		color white

	a:hover
		background-color grey

.navigation-stuck

	nav
		position fixed
		top 0
		margin-top 0
		z-index 1

	#main-content
		margin-top: header_height + nav_height